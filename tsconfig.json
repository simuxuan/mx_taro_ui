{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react-jsx",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "types/global.d.ts" // 包含我们的types
    ],
    // 定义@路径别名
    "paths": {
      "@components": [
        "src/components/"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@utils": [
        "src/utils"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@service": [
        "src/service"
      ],
      "@service/*": [
        "src/service/*"
      ],
    },
  },
  "include": ["./src", "./types"],
  "compileOnSave": false
}
